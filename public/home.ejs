<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Chatbot</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
        .chat-container {
            max-width: 800px;
            margin: auto;
            border: 1px solid #e5e7eb;
            border-radius: 0.5rem;
            background-color: #f9fafb;
            box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px -1px rgba(0, 0, 0, 0.1);
        }
        .chat-header {
            background-color: #6b7280;
            color: white;
            padding: 1rem;
            border-top-left-radius: 0.5rem;
            border-top-right-radius: 0.5rem;
            font-size: 1.25rem;
            font-weight: 600;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .message-container {
            padding: 1rem;
            display: flex;
            flex-direction: column;
            height: 60vh;
            overflow-y: auto;
        }
        .message {
            margin-bottom: 0.75rem;
            display: flex;
            flex-direction: column;
        }
        .sender {
            font-weight: 600;
            margin-right: 0.5rem;
            color: #374151;
        }
        .text {
            padding: 0.75rem;
            border-radius: 0.5rem;
            background-color: #e5e7eb;
            color: #1f2937;
            max-width: 80%;
        }
        .user .text {
            background-color: #d1fae5;
            color: #15803d;
        }
        .input-container {
            padding: 1rem;
            display: flex;
            gap: 0.5rem;
            border-top: 1px solid #e5e7eb;
        }
        .input-box {
            flex: 1;
            padding: 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: 0.5rem;
            font-size: 1rem;
            outline: none;
        }
        .input-box:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.15);
        }
        .send-button {
            padding: 0.75rem 1.5rem;
            background-color: #3b82f6;
            color: white;
            border-radius: 0.5rem;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
            border: none;
        }
        .send-button:hover {
            background-color: #2563eb;
        }
        .loading-animation {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        .dot {
            width: 0.75rem;
            height: 0.75rem;
            background-color: #6b7280;
            border-radius: 50%;
            animation: pulse 1.5s infinite;
        }
        .dot:nth-child(2) {
            animation-delay: 0.5s;
        }
        .dot:nth-child(3) {
            animation-delay: 1s;
        }
        @keyframes pulse {
            0% {
                opacity: 0.2;
                transform: scale(0.8);
            }
            50% {
                opacity: 1;
                transform: scale(1.2);
            }
            100% {
                opacity: 0.2;
                transform: scale(0.8);
            }
        }
        .robot-icon {
            width: 2rem;
            height: 2rem;
            margin-right: 0.5rem;
        }
    </style>
</head>
<body class="bg-gray-100">
    <div class="chat-container">
        <div class="chat-header">
            <img src="https://cdn.jsdelivr.net/npm/lucide-static@latest/icons/robot.svg" alt="Robot Icon" class="robot-icon">
            Chat with AI
        </div>
        <div class="message-container" id="message-container">
            </div>
        <div class="input-container">
            <input type="text" id="input-box" placeholder="Type your message..." class="input-box">
            <button id="send-button" class="send-button">Send</button>
        </div>
    </div>

    <script>
        const messageContainer = document.getElementById('message-container');
        const inputBox = document.getElementById('input-box');
        const sendButton = document.getElementById('send-button');

        function addMessage(sender, text, isUser = false) {
            const message = document.createElement('div');
            message.classList.add('message');
            if (isUser) {
                message.classList.add('user');
            }

            const senderElement = document.createElement('span');
            senderElement.classList.add('sender');
            senderElement.textContent = isUser ? 'You: ' : 'AI: ';

            const textElement = document.createElement('span');
            textElement.classList.add('text');
            textElement.textContent = text;

            message.appendChild(senderElement);
            message.appendChild(textElement);
            messageContainer.appendChild(message);

            // Scroll to bottom to show the latest message
            messageContainer.scrollTop = messageContainer.scrollHeight;
        }

        function showLoadingAnimation() {
            const loadingDiv = document.createElement('div');
            loadingDiv.classList.add('message', 'ai-message');
            loadingDiv.innerHTML = `<span class="sender">AI:</span><span class="text loading-animation"><span class="dot"></span><span class="dot"></span><span class="dot"></span></span>`;
            messageContainer.appendChild(loadingDiv);
            messageContainer.scrollTop = messageContainer.scrollHeight;
        }

        function removeLoadingAnimation() {
            const loadingDiv = messageContainer.querySelector('.loading-animation');
            if (loadingDiv) {
                loadingDiv.parentElement.remove();
            }
        }

        sendButton.addEventListener('click', () => {
            const messageText = inputBox.value.trim();
            if (messageText === '') return;

            addMessage('You', messageText, true);
            inputBox.value = '';
            showLoadingAnimation();

            // Simulate AI response after a short delay
            setTimeout(() => {
                removeLoadingAnimation();
                const aiResponse = "This is a simulated response from the AI chatbot.";
                addMessage('AI', aiResponse);
            }, 2000); // 2-second delay
        });

        inputBox.addEventListener('keydown', (event) => {
            if (event.key === 'Enter') {
                sendButton.click();
            }
        });
    </script>
</body>
</html>
